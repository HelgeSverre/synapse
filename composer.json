{
  "version": "1.0.0",
  "name": "llm-exe/llm-exe",
  "description": "A modern PHP library for LLM orchestration with executors, prompts, parsers, and tool calling",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "llm",
    "openai",
    "anthropic",
    "ai",
    "executor",
    "prompt",
    "parser"
  ],
  "require": {
    "php": "^8.2",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7.0",
    "infection/infection": "*",
    "laravel/pint": "^1.27",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.0",
    "rector/rector": "*",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "LlmExe\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "LlmExe\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --no-coverage",
    "test:coverage": "herd coverage ./vendor/bin/phpunit --coverage-html=coverage --coverage-text --coverage-clover=coverage.xml",
    "analyze": "@analyse",
    "analyse": "phpstan analyse --configuration=phpstan.neon src/",
    "format": "@lint",
    "lint": "pint",
    "lint:check": "pint --test",
    "check": [
      "@lint:check",
      "@analyse",
      "@test"
    ],
    "examples": "for f in examples/*.php; do echo \"=== $f ===\"; php \"$f\" 2>&1 | head -10; echo; done",
    "rector": "rector process",
    "rector:dry": "rector process --dry-run",
    "infection": [
      "herd coverage ./vendor/bin/phpunit --coverage-xml=coverage-xml --log-junit=junit.xml",
      "./vendor/bin/infection --threads=4 --coverage=. --skip-initial-tests --show-mutations"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "minimum-stability": "stable"
}
