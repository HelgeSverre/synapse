{
  "version": "1.0.0",
  "name": "helgesverre/synapse",
  "description": "A modern PHP library for LLM orchestration with executors, prompts, parsers, and tool calling",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "llm",
    "openai",
    "anthropic",
    "ai",
    "executor",
    "prompt",
    "parser"
  ],
  "require": {
    "php": "^8.2",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7.0",
    "infection/infection": "*",
    "laravel/pint": "^1.27",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.0",
    "roave/security-advisories": "dev-latest",
    "spatie/pdf-to-text": "^1.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "HelgeSverre\\Synapse\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HelgeSverre\\Synapse\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --no-coverage",
    "test:unit": "./vendor/bin/phpunit --testsuite=Unit --no-coverage",
    "test:integration": "./vendor/bin/phpunit --testsuite=Integration --no-coverage",
    "test:all": "./vendor/bin/phpunit --testsuite=Unit,Integration --no-coverage",
    "test:coverage": "herd coverage ./vendor/bin/phpunit",
    "analyze": "@analyse",
    "analyse": "phpstan analyse --configuration=phpstan.neon src/",
    "format": "@lint",
    "lint": "pint",
    "lint:check": "pint --test",
    "check": [
      "@lint:check",
      "@analyse",
      "@test"
    ],
    "examples": "for f in examples/*.php; do echo \"=== $f ===\"; php \"$f\" 2>&1 | head -10; echo; done",
    "infection": [
      "herd coverage ./vendor/bin/phpunit --coverage-xml=.build/coverage-xml --log-junit=.build/junit.xml",
      "./vendor/bin/infection --threads=4 --coverage=.build --skip-initial-tests --show-mutations"
    ],
    "clean": "rm -rf .build .phpunit.cache coverage coverage.xml coverage-xml junit.xml infection.log infection-summary.log coverage-report.txt"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "minimum-stability": "stable"
}
